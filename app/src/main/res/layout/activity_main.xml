<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    tools:openDrawer="end"
    android:id="@+id/drawer"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/toolbar"
            android:background="#6200EE">
        </androidx.appcompat.widget.Toolbar>
    </RelativeLayout>
    <com.google.android.material.navigation.NavigationView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/signup"
        android:menu="@menu/menucard"
        android:headder_layout="@layout/head"
        android:background="#353e47"
        android:gravity="start"
        app:itemTextColor="#fff"/>
</androidx.drawerlayout.widget.DrawerLayout>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ww1"
    tools:context=".MainActivity">
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="120dp"
        android:layout_height="150dp"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="20dp"
        app:srcCompat="@drawable/w2" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="188dp"
        android:layout_height="35dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="250dp"
        android:hint="USERNAME"
        android:textColor="#000000"
        android:background="#87CEFA"
        android:drawableLeft="@drawable/userico"
        android:text="USERNAME" />
    <TextView
        android:id="@+id/textView2"
        android:layout_width="188dp"
        android:layout_height="35dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="300dp"
        android:hint="FULL NAME"
        android:textColor="#000000"
        android:background="#87CEFA"
        android:drawableLeft="@drawable/userico3"
        android:text="FULL NAME" />

    <EditText
        android:id="@+id/editText"
        android:layout_width="188dp"
        android:layout_height="35dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="400dp"
        android:hint="PASSWORD"
        android:textColor="#000000"
        android:ems="10"
        android:background="#87CEFA"
        android:drawableLeft="@drawable/userico2"
        android:inputType="textPassword" />
    <EditText
        android:id="@+id/editText3"
        android:layout_width="188dp"
        android:layout_height="35dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="450dp"
        android:hint="PASSWORD"
        android:textColor="#000000"
        android:ems="10"
        android:background="#87CEFA"
        android:drawableLeft="@drawable/userico2"
        android:inputType="textPassword" />

    <EditText
        android:id="@+id/editText2"
        android:layout_width="188dp"
        android:layout_height="35dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="350dp"
        android:hint="EMAIL"
        android:textColor="#000000"
        android:background="#87CEFA"
        android:ems="10"
        android:drawableLeft="@drawable/userico3"
        android:inputType="textEmailAddress" />

    <androidx.cardview.widget.CardView
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        app:cardBackgroundColor="@color/colorAccent"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="550dp"
        app:cardElevation="0dp"
        app:cardCornerRadius="25dp"/>
    <TextView
        android:layout_width="188dp"
        android:layout_height="35dp"
        android:layout_marginLeft="170dp"
        android:layout_marginTop="560dp"
        android:layout_centerHorizontal="true"
        android:textSize="20dp"
        android:text="            SIGNUP"
        android:textColor="#000000"/>

    <com.google.android.material.navigation.NavigationView
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</RelativeLayout>
